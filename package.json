  "dependencies": {
    "aws-sdk": "^2.498.0",
    "axios": "^0.18.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.31",
    "@types/glob": "^7.1.1",
    "@types/node": "^12.6.8",
    "@types/webpack": "^4.32.1",
    "chai": "^4.1.2",
    "dotenv": "^8.0.0",
    "glob": "^7.1.4",
    "mocha": "^5.1.1",
    "shx": "^0.3.2",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3",

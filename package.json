  "scripts": {
    "test": "mocha tests/unit/",
    "watch": "NODE_ENV=development webpack --watch",
    "build": "webpack",
    "start": "sam local start-api -p 3001 -t ./template.yml",
    "sam:package": "shx rm -f packaged.yml && sam package --template-file ./template.yml --s3-bucket $SAM_S3_BUCKET --output-template-file packaged.yml",
    "deploy:sam": "sam deploy --template-file packaged.yml --stack-name study-aws-sam-ts --capabilities CAPABILITY_IAM",
    "deploy:info": "aws cloudformation describe-stacks --stack-name study-aws-sam-ts",
    "deploy": "npm run deploy:sam && npm run deploy:info"
  }
